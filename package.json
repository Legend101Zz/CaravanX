{
  "name": "caravan-x",
  "version": "1.0.0",
  "description": "A terminal-based utility for managing Caravan multisig wallets in regtest mode. This tool simplifies development and testing with Caravan by providing an easy-to-use interface",
  "main": "dist/index.js",
  "bin": {
    "caravan-regtest": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "dev": "ts-node-dev --respawn src/index.ts",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Legend101Zz/CaravanX.git"
  },
  "keywords": [
    "bitcoin",
    "regtest",
    "multisig",
    "psbt",
    "caravan",
    "bitcoin-core",
    "wallet",
    "blockchain",
    "btc",
    "cli",
    "crypto",
    "developer-tools",
    "testing",
    "psbt-signing",
    "utxo",
    "xpub",
    "transactions",
    "mining",
    "script",
    "automation"
  ],
  "author": "Mrigesh Thakur",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Legend101Zz/CaravanX/issues"
  },
  "homepage": "https://github.com/Legend101Zz/CaravanX#readme",
  "dependencies": {
    "@caravan/clients": "^0.4.0",
    "axios": "^1.8.4",
    "bip32": "^5.0.0-rc.0",
    "bitcoinjs-lib": "^6.1.7",
    "chalk": "^5.4.1",
    "clipboardy": "^4.0.0",
    "commander": "^13.1.0",
    "ecpair": "^3.0.0",
    "figlet": "^1.8.0",
    "fs-extra": "^11.3.0",
    "inquirer": "^12.5.0",
    "tiny-secp256k1": "^2.2.3"
  },
  "devDependencies": {
    "@types/figlet": "^1.7.0",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "eslint": "^9.23.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2"
  }
}
