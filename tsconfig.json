{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "src/visualization/static/pixel/pixel-city.ts",
    "src/visualization/static/pixel/globals.d.ts"
  ],
  "exclude": ["node_modules", "**/*.test.ts"]
}
